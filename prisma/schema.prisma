generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model TokenReset {
  ID_TOKEN   String   @id @default(uuid())
  TOKEN      String
  EXPIRATION DateTime
  USED       Boolean  @default(false)
  ID_USER    String
  Users      Users    @relation(fields: [ID_USER], references: [ID_USER])
}

model Users {
  ID_USER    String       @id
  USERNAME   String
  NAME       String
  EMAIL      String
  PASSWORD   String
  ROLE       UserRole     @default(USER)
  DT_CR      DateTime     @default(now())
  DT_UP      DateTime
  DEL_AT     DateTime?
  TokenReset TokenReset[]

  @@map("USERS")
}

enum UserRole {
  USER
  ADMIN
}
