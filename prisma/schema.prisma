generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model TokenReset {
  ID_TOKEN   String   @id
  TOKEN      String
  EXPIRATION DateTime
  USED       Boolean  @default(false)
  ID_USER    String
  USERS      USERS    @relation(fields: [ID_USER], references: [ID_USER])
}

model USERS {
  ID_USER    String       @id
  USERNAME   String
  NAME       String
  EMAIL      String
  PASSWORD   String
  ROLE       UserRole     @default(USER)
  DT_CR      DateTime     @default(now())
  DT_UP      DateTime
  DEL_AT     DateTime?
  TokenReset TokenReset[]
}

enum UserRole {
  USER
  ADMIN
}
